{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "ES2015"
    ],
    "module": "ESNext",
    "target": "es6"
  }
}